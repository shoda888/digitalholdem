<div class="login-box">
  <div class="login-logo"><b>DigitalHoldem</b> Login</div>
  <!-- /.login-logo -->
  <div class="login-box-body">
    <p class="login-box-msg">サインインしてください</p>
    <% if @error_message %>
      <div class="form-error">
        <%= @error_message %>
      </div>
    <% end %>
    <%=form_tag sessions_path do%>
      <div class="form-group has-feedback">
        <input name= "name" type="name" class="form-control" placeholder="ユーザー名">
      </div>
      <div class="form-group has-feedback">
        <input name= "password" type="password" class="form-control" placeholder="パスワード">
      </div>
      <div class="col-xs-4">
        <%= submit_tag("ログイン", class: 'btn btn-info')%>
      </div>
    <%end%>
    <div class="social-auth-links text-center">
      <p>- OR -</p>
      <a href="#" class="btn btn-block btn-social btn-facebook btn-flat"><i class="fa fa-facebook"></i> Sign in using Facebook</a>
      <a href="#" class="btn btn-block btn-social btn-google btn-flat"><i class="fa fa-google-plus"></i> Sign in using Google+</a>
    </div>
  </div>
</div>
