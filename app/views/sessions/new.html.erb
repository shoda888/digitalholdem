<div class="login-box">
  <div class="login-logo"><b>DigitalHoldem</b> Login</div>
  <!-- /.login-logo -->
  <div class="card">
    <div class="card-body login-card-body">
      <p class="login-box-msg">サインインしてください</p>
      <% if @error_message %>
        <div class="form-error">
          <%= @error_message %>
        </div>
      <% end %>
      <% if flash[:notice] %>
        <div class="flash">
          <%= flash[:notice] %>
        </div>
      <% end %>
      <div class="form-body">
        <%=form_tag sessions_path do%>
          <div class="form-group has-feedback">
            <input name= "name" type="name" class="form-control" placeholder="ユーザー名">
          </div>
          <div class="form-group has-feedback">
            <input name= "password" type="password" class="form-control" placeholder="パスワード">
          </div>
          <div class="row">
            <div class="col-8"></div>
            <div class="col-4">
              <%= submit_tag("ログイン", class: 'btn btn-info')%>
            </div>
          </div>
        <%end%>
      </div>
      <div class="social-auth-links text-center">
        <p>- OR -</p>
        <a href="#" class="btn btn-block btn-primary">
          <i class="fa fa-facebook mr-2"></i> Sign in using Facebook
        </a>
      </div>
    </div>
  </div>
</div>
